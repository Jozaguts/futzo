{
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.php",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "singleQuote": false
            }
        },
        {
            "files": "*.vue",
            "options": {
                "parser": "vue",
                "singleQuote": true,
                "semi": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "singleQuote": true
            }
        }
    ]
}
